
user_details
	user_id - uuid - auth.uid() - pk
	wallet_address - text - nullable
	total_earned_trading_fees - numeric - 0
	display_name - text - nullable
	profile_image - text - nullable
	metadata - jsonb - nullable
	follower_count - int4 - 0
	following_count - int4 - 0
	blocked - bool - false
	created_at - timestampz - now()
	updated_at - timestampz

followers
	follower_id - uuid - pk
	following_id - uuid - pk
	created_at - timestampz - now()

wallet_linking_nonces
	user_id - uuid - auth.uid() - pk
	wallet_address - text - not null
	nonce - uuid - gen_random_uuid()
	created_at - timestampz - now()

subject_details
	subject - text - pk
	last_fetched_key_price - numeric - 68750000000000
	total_trading_key_volume - numeric - 0
	total_earned_trading_fees - numeric - 0
	is_key_price_up - bool - nullable
	last_message - text - nullable
	last_message_sent_at - timestampz - -infinity
	key_holder_count - int4 - 0
	last_key_purchased_at - timestampz - -infinity
	created_at - timestampz - now()
	updated_at - timestampz

subject_key_holders
	subject - text - pk
	wallet_address - text - pk
	last_fetched_balance - numeric - 0
	total_earned_trading_fees - numeric - 0
	created_at - timestampz - now()
	updated_at - timestampz

topic_chat_messages
	id - int8 - pk
	topic - text - not null
	author - uuid - auth.uid()
	author_name - text - not null
	author_avatar_url - text - nullable
	message_type - int2 - not null
	message - text - nullable
	translated - jsonb - nullbale
	rich - jsonb - nullable
	created_at - timestampz - now()
	updated_at - timestampz

subject_chat_messages
	id - int8 - pk
	subject - text - not null
	author - uuid - auth.uid()
	author_name - text - not null
	author_avatar_url - text - nullable
	message_type - int2 - not null
	message - text - nullable
	translated - jsonb - nullbale
	rich - jsonb - nullable
	post_ref - int8 - nullable
	created_at - timestampz - now()
	updated_at - timestampz

user_posts
	id - int8 - pk
	target - int2 - not null
	author - uuid - auth.uid()
	author_name - text - not null
	author_avatar_url - text - nullable
	message - text - not null
	translated - jsonb - nullbale
	rich - jsonb - nullable
	created_at - timestampz - now()
	updated_at - timestampz

tracked_event_blocks
	contract_type - string - pk
	block_number - int8 - not null
	updated_at - timestampz - now()

subject_contract_events
	block_number - int8 - pk
	log_index - int8 - pk
	event_type - int2 - not null
	args - text - {}
	wallet_address - text - not null
	subject - text - not null
	created_at - timestampz - now()

notifications
	id - int8 - auto_increment - pk
	user_id - uuid - auth.uid()
	type - int2 - not null  -- 알림의 유형 (예: 'new_follower', 'new_message', 'key_purchased', etc.)
	source_id - uuid - nullable  -- 알림의 원인이 된 사용자나 주제의 ID (예: 새로운 팔로워의 ID, 메시지를 보낸 사용자의 ID)
	read_at - timestampz - nullable  -- 알림이 읽힌 시간
	created_at - timestampz - now()  -- 알림이 생성된 시간
